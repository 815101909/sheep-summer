<view class="tab-bar {{themeClass}}">
  <view class="tab-bar-border"></view>
  <view
    wx:for="{{list}}"
    wx:key="index"
    class="tab-bar-item {{selected === index ? 'active' : ''}}"
    data-path="{{item.pagePath}}"
    data-index="{{index}}"
    bindtap="switchTab"
  >
    <image
      class="tab-bar-icon {{selected === index ? 'active' : ''}}"
      src="{{selected === index ? item.selectedIconPath : item.iconPath}}"
      mode="aspectFit"
    />
    <text class="tab-bar-text {{selected === index ? 'active' : ''}}">{{item.text}}</text>
  </view>
</view>
