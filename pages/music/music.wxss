/* pages/music/music.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #e6f3ff 0%, #f0f8ff 50%, #f5faff 100%);
  position: relative;
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.3;
  z-index: 1;
}

/* ===== MP3播放器主体 ===== */
.mp3-player {
  position: relative;
  z-index: 10;
  width: 100%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
    transform: translateY(30rpx); /* 整体向下平移15rpx */
}

/* MP3播放器外壳 */
.mp3-body {
  width: 100%;
  height: 950rpx; /* 增加50rpx后的高度 */
  background: rgba(255, 255, 255, 0.15); /* 半透明背景 */
  border-radius: 30rpx;
  box-shadow:
    0 20rpx 40rpx rgba(0, 0, 0, 0.2),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.8),
    inset 0 -2rpx 4rpx rgba(0, 0, 0, 0.2);
  border: 4rpx solid rgba(255, 255, 255, 0.3); /* 半透明边框 */
  position: relative;
  display: flex;
  flex-direction: column;
  padding: 40rpx 30rpx;
}

/* MP3屏幕 */
.mp3-screen {
  background: linear-gradient(145deg, #001122, #003344);
  border-radius: 20rpx;
  height: 390rpx; /* 缩小10rpx后的高度 */
  margin-top: 30rpx; /* 向上平移5rpx */
  margin-bottom: 20rpx; /* 减少间距，为功能栏让位 */
  border: 3rpx solid #004466;
  box-shadow: inset 0 4rpx 8rpx rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.screen-content {
  width: 90%;
  height: 90%;
  background: #000;
  border-radius: 10rpx;
  border: 2rpx solid #333;
  display: flex;
  flex-direction: column;
  position: relative; /* 确保子元素绝对定位相对于此容器 */
  overflow: hidden; /* 防止内容溢出 */
}

/* 媒体显示区域（作为背景层） */
.media-display {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #000;
}

.screen-media {
  width: 100%;
  height: 100%;
  opacity: 0.6; /* 稍微调暗一点，让文字更清晰 */
}

.song-info {
  position: relative;
  z-index: 5;
  text-align: center;
  padding-top: 20rpx;
  width: 100%;
}

.song-title {
  display: block;
  margin-bottom: 8rpx;
  image-rendering: pixelated;
}

.song-artist {
  display: block;
  font-family: 'Courier New', monospace;
}

/* 歌词显示区域（字幕式） */
.lyrics-subtitle {
  position: absolute;
  bottom: 80rpx; /* 距离底部一段距离，留给进度条 */
  left: 0;
  width: 100%;
  height: auto;
  text-align: center;
  z-index: 5;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.lyrics-text {
  display: inline-block;
  text-align: center;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin: 0 auto;
  line-height: 1.4;
  transition: all 0.3s ease;
}

.progress-bar {
  position: absolute;
  bottom: 40rpx;
  left: 5%;
  width: 90%;
  z-index: 5;
  height: 6rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 3rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  border-radius: 3rpx;
  transition: all 0.3s ease;
}

.time-display {
  position: absolute;
  bottom: 10rpx;
  left: 5%;
  width: 90%;
  z-index: 5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.current-time, .total-time {
  font-size: 20rpx;
  font-family: 'Courier New', monospace;
}

/* 控制按钮区域 */
.mp3-controls {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}

/* 控制面板布局（居中） */
.mp3-controls {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}

.control-panel {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx; /* 上下间距增加5rpx */
  margin-top: 12rpx; /* 整体向下平移12rpx */
}

.control-row {
  display: flex;
  align-items: center;
  gap: 41rpx; /* 第一行和第三行左右间距增加5rpx */
}

/* 第二行增加间距 */
.control-row:nth-child(2) {
  gap: 33rpx; /* 第二行左右间距增加5rpx */
}

.control-left,
.control-center,
.control-right,
.control-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #999; /* 浅色像素风格背景 */
  border: 3rpx solid #666; /* 浅色像素边框 */
  box-shadow:
    3rpx 3rpx 0px #333, /* 浅色像素阴影 */
    inset -2rpx -2rpx 0px #bbb; /* 浅色内高光 */
  transition: all 0.2s ease;
  image-rendering: pixelated;
  width: 70rpx;
  height: 70rpx;
}

.control-btn:active {
  box-shadow:
    1rpx 1rpx 0px #333, /* 按下时的浅色像素阴影 */
    inset 2rpx 2rpx 0px #777; /* 按下时的浅色内阴影 */
}

/* 主按钮样式 - 更大的尺寸和深色 */
.main-btn {
  width: 90rpx !important;
  height: 90rpx !important;
  background: #333 !important; /* 深色背景 */
  border-color: #111 !important; /* 更深的边框 */
  box-shadow:
    3rpx 3rpx 0px #000, /* 统一的像素阴影 */
    inset -3rpx -3rpx 0px #555 !important; /* 深色内高光 */
}

.control-center {
  width: 90rpx;
  height: 90rpx;
  background: #00aa00 !important; /* 绿色像素风格，覆盖主按钮的深色 */
  border-color: #006600 !important;
  box-shadow:
    4rpx 4rpx 0px #000, /* 更大的像素阴影 */
    inset -3rpx -3rpx 0px #00cc00 !important; /* 内高光 */
}



.play-btn .play-icon {
  font-size: 42rpx;
  color: #ffffff;
  text-shadow: 2rpx 2rpx 0px #000000;
}


.empty-btn {
  background: #aaa; /* 浅色，表示无功能 */
  opacity: 0.8;
}

.empty-btn:active {
  transform: none; /* 空按钮不响应点击 */
}

/* 装饰按钮 - 旋转动画 */
.decoration-btn {
  background: #ccc; /* 稍深的浅色背景 */
}

.decoration-icon {
  width: 56rpx;
  height: 56rpx;
  animation: rotate 3s linear infinite; /* 持续旋转动画 */
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}


.control-icon {
  font-size: 28rpx !important;
}

.control-icon-img {
  width: 56rpx;
  height: 56rpx;
}





