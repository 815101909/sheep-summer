}

.favorite-icon {
  font-size: 24rpx;
}

.song-duration {
  font-size: 22rpx;
  color: #cccccc;
  font-family: 'Courier New', monospace;
}


/* ===== 动画效果 ===== */
@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.1);
    opacity: 1;
  }
}

@keyframes breathe {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.02);
  }
}

.mp3-body {
  animation: breathe 3s ease-in-out infinite;
}

.play-btn.active {
  animation: pulse 1.5s ease-in-out infinite;
}
