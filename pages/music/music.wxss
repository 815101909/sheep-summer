/* MP3功能栏 - 简洁文字按钮 */
.function-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 5rpx 0 10rpx 0; /* 整体向上平移5rpx */
  padding: 15rpx 20rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 12rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  box-shadow:
    inset 0 2rpx 4rpx rgba(0, 0, 0, 0.3),
    0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.function-text {
  font-size: 20rpx;
  color: #ffffff;
  font-family: 'Courier New', monospace;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 0px #000000;
  cursor: pointer;
  transition: all 0.2s ease;
  padding: 10rpx 15rpx;
  border: 2rpx solid #666;
  border-radius: 8rpx;
  background: linear-gradient(135deg, #444 0%, #666 50%, #444 100%);
  box-shadow:
    2rpx 2rpx 0px #000,
    inset -2rpx -2rpx 0px #222,
    inset 1rpx 1rpx 0px #888;
  position: relative;
}

.function-text:active {
  transform: translate(1rpx, 1rpx);
  box-shadow:
    1rpx 1rpx 0px #000,
    inset -1rpx -1rpx 0px #222,
    inset 2rpx 2rpx 0px #888;
}

.function-text.active {
  background: linear-gradient(135deg, #222 0%, #444 50%, #222 100%);
  border-color: #333;
  color: #cccccc;
  text-shadow: 1rpx 1rpx 0px #000000;
}

/* 展开面板 - 悬浮列表样式 */
.expand-panel {
  position: absolute;
  top: -70rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 1000;
  min-width: 300rpx;
}

.panel-content {
  background: linear-gradient(135deg, #333 0%, #555 50%, #333 100%);
  border: 3rpx solid #666;
  border-radius: 12rpx;
  box-shadow:
    0 4rpx 12rpx rgba(0, 0, 0, 0.5),
    0 2rpx 4rpx rgba(0, 0, 0, 0.3),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1),
    inset 0 -1rpx 0 rgba(0, 0, 0, 0.3);
  padding: 15rpx;
  margin: 0;
}

.panel-header {
  font-size: 20rpx;
  color: #ffffff;
  font-family: 'Courier New', monospace;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 0px #000000;
  text-align: center;
  margin-bottom: 12rpx;
}

/* 倍速选项网格 */
.option-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8rpx;
}

.option-btn {
  height: 45rpx;
  background: linear-gradient(135deg, #444 0%, #666 50%, #444 100%);
  border: 2rpx solid #777;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow:
    1rpx 1rpx 0px #000,
    inset -1rpx -1rpx 0px #333,
    inset 1rpx 1rpx 0px #777;
}

.option-btn:active {
  transform: translate(1rpx, 1rpx);
  box-shadow:
    0 0 0px #000,
    inset -1rpx -1rpx 0px #333,
    inset 2rpx 2rpx 0px #777;
}

.option-btn.selected {
  background: linear-gradient(135deg, #555 0%, #888 50%, #555 100%);
  border-color: #aaa;
  box-shadow:
    1rpx 1rpx 0px #000,
    inset -1rpx -1rpx 0px #444,
    inset 1rpx 1rpx 0px #999;
}

.option-text {
  font-size: 16rpx;
  color: #ffffff;
  font-family: 'Courier New', monospace;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 0px #000000;
}

/* 字体大小选项 */
.size-options {
  display: flex;
  justify-content: center;
  gap: 15rpx;
}

.size-option {
  width: 70rpx;
  height: 50rpx;
  background: linear-gradient(135deg, #444 0%, #666 50%, #444 100%);
  border: 2rpx solid #777;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow:
    1rpx 1rpx 0px #000,
    inset -1rpx -1rpx 0px #333,
    inset 1rpx 1rpx 0px #777;
}

.size-option:active {
  transform: translate(1rpx, 1rpx);
  box-shadow:
    0 0 0px #000,
    inset -1rpx -1rpx 0px #333,
    inset 2rpx 2rpx 0px #777;
}

.size-option.selected {
  background: linear-gradient(135deg, #555 0%, #888 50%, #555 100%);
  border-color: #aaa;
  box-shadow:
    1rpx 1rpx 0px #000,
    inset -1rpx -1rpx 0px #444,
    inset 1rpx 1rpx 0px #999;
}

.size-text {
  font-size: 20rpx;
  color: #ffffff;
  font-family: 'Courier New', monospace;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 0px #000000;
}

/* 字体颜色选项 */
.color-options {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
  justify-items: center;
}

.color-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  cursor: pointer;
  transition: all 0.2s ease;
  padding: 8rpx;
  border-radius: 8rpx;
  background: rgba(0, 0, 0, 0.2);
}

.color-option:active {
  transform: scale(0.95);
}

.color-option.selected {
  background: rgba(255, 255, 0, 0.2);
  border: 2rpx solid #ffff00;
}

.color-swatch {
  width: 35rpx;
  height: 35rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.5);
  transition: all 0.2s ease;
}

.color-option.selected .color-swatch {
  border-color: #ffff00;
  box-shadow: 0 0 12rpx rgba(255, 255, 0, 0.8);
  transform: scale(1.1);
}

.color-swatch.black {
  background: #000000;
}

.color-swatch.white {
  background: #ffffff;
}

.color-swatch.green {
  background: #00ff00;
}

.color-swatch.blue {
  background: #0088ff;
}

.color-swatch.red {
  background: #ff0000;
}

.color-swatch.goose {
  background: #ffd700;
}

.color-label {
  font-size: 16rpx;
  color: #ffffff;
  font-family: 'Courier New', monospace;
  text-shadow: 1rpx 1rpx 0px #000000;
}

/* 点击遮罩关闭面板 */
.overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  z-index: 999;
}

/* MP3品牌标识 */
.mp3-brand {
  text-align: center;
  margin-top: auto;
  padding-top: 20rpx;
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
}

.brand-text {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #000000; /* 黑色字体 */
  font-family: 'Courier New', monospace;
  text-shadow: 2rpx 2rpx 0px #ffffff;
}

.brand-subtitle {
  display: block;
  font-size: 20rpx;
  color: #000000; /* 黑色字体 */
  font-family: 'Courier New', monospace;
  margin-top: 4rpx;
  text-shadow: 1rpx 1rpx 0px #ffffff;
}


/* ===== 播放列表面板 ===== */
.playlist-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60vh;
  background: rgba(0, 0, 0, 0.85); /* 稍微加深一点 */
  backdrop-filter: blur(10rpx);
  border-top: 2rpx solid rgba(255, 255, 255, 0.1);
  transform: translateY(100%);
  transition: transform 0.4s ease;
  z-index: 20;
  border-radius: 20rpx 20rpx 0 0;
  display: flex;
  flex-direction: column;
}

.playlist-panel.visible {
  transform: translateY(0);
}

.playlist-header {
  display: flex;
  flex-direction: column;
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  gap: 20rpx;
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.search-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 35rpx;
  padding: 0 30rpx;
  color: #ffffff;
  font-size: 26rpx;
  font-family: 'Courier New', monospace;
}

.search-placeholder {
  color: rgba(255, 255, 255, 0.4);
}

.filter-btn {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.filter-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.2);
}

.filter-btn.active {
  background: rgba(255, 100, 100, 0.2);
  border-color: rgba(255, 100, 100, 0.6);
  box-shadow: 0 0 15rpx rgba(255, 100, 100, 0.2);
}

.filter-icon {
  font-size: 32rpx;
}

.playlist-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  font-family: 'Courier New', monospace;
  text-shadow: 1rpx 1rpx 0px #000000;
}

.close-playlist {
  font-size: 36rpx;
  color: #ffffff;
  cursor: pointer;
  padding: 8rpx;
}

.playlist-scroll {
  flex: 1;
  height: 0; /* 确保 scroll-view 在 flex 容器中正确滚动 */
}

.song-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
  transition: all 0.3s ease;
  color: #ffffff;
}

.song-item:active {
  background: rgba(255, 255, 255, 0.05);
}

.song-item.playing {
  background: rgba(0, 255, 136, 0.15);
  border-left: 3rpx solid #00ff88;
}

.song-number {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: 600;
  color: #ffffff;
}

.song-item.playing .song-number {
  background: #00ff88;
