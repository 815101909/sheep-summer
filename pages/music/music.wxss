.song-item.playing {
  background: rgba(0, 255, 136, 0.15);
  border-left: 3rpx solid #00ff88;
}

.song-number {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: 600;
  color: #ffffff;
}

.song-item.playing .song-number {
  background: #00ff88;
  color: #000000;
}

.song-details {
  flex: 1;
}

.item-title {
  display: inline;
  font-size: 28rpx;
  font-weight: 500;
  color: #ffffff;
  font-family: 'Courier New', monospace;
  text-shadow: 1rpx 1rpx 0px #000000;
  line-height: 1.2;
  vertical-align: middle;
}

.item-artist {
  display: block;
  font-size: 22rpx;
  color: #cccccc;
  font-family: 'Courier New', monospace;
}
 
.song-meta {
  display: flex;
  align-items: center;
  gap: 10rpx;
}
 
.song-meta .meta {
  font-size: 20rpx;
  color: #cccccc;
  font-family: 'Courier New', monospace;
}

.song-favorite {
  margin-right: 16rpx;
}

.favorite-icon {
  font-size: 24rpx;
}

.song-duration {
  font-size: 22rpx;
  color: #cccccc;
  font-family: 'Courier New', monospace;
}
 
.song-actions {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
 
.print-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}
 
.print-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.2);
}
 
.print-icon {
  font-size: 28rpx;
  line-height: 1;
}


/* ===== 动画效果 ===== */
@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.1);
    opacity: 1;
  }
}

@keyframes breathe {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.02);
  }
}

.mp3-body {
  animation: breathe 3s ease-in-out infinite;
}

.play-btn.active {
  animation: pulse 1.5s ease-in-out infinite;
}

.vip-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.55);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.vip-modal {
  width: 600rpx;
  max-width: 90%;
  background: linear-gradient(135deg, #222 0%, #333 50%, #222 100%);
  border: 3rpx solid #666;
  border-radius: 16rpx;
  box-shadow: 0 12rpx 28rpx rgba(0,0,0,0.6);
  padding: 30rpx 26rpx;
  color: #fff;
}

.vip-title {
  font-size: 32rpx;
  text-align: center;
  font-weight: 700;
  margin-bottom: 12rpx;
}

.vip-content {
  font-size: 26rpx;
  text-align: center;
  color: #dddddd;
  line-height: 1.6;
  margin-bottom: 26rpx;
}

.vip-actions {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.vip-btn {
  min-width: 200rpx;
  height: 68rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #fff;
  border: 2rpx solid #777;
}

.vip-btn.cancel {
  background: linear-gradient(135deg, #555 0%, #777 50%, #555 100%);
}

.vip-btn.confirm {
  background: linear-gradient(135deg, #ffb300 0%, #ff8c00 50%, #ff6a00 100%);
  border-color: #ff9900;
}
