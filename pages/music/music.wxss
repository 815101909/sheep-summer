/* MP3功能栏 - 简洁文字按钮 */
.function-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 5rpx 0 10rpx 0; /* 整体向上平移5rpx */
  padding: 15rpx 20rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 12rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  box-shadow:
    inset 0 2rpx 4rpx rgba(0, 0, 0, 0.3),
    0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.function-text {
  font-size: 20rpx;
  color: #ffffff;
  font-family: 'Courier New', monospace;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 0px #000000;
  cursor: pointer;
  transition: all 0.2s ease;
  padding: 10rpx 15rpx;
  border: 2rpx solid #666;
  border-radius: 8rpx;
  background: linear-gradient(135deg, #444 0%, #666 50%, #444 100%);
  box-shadow:
    2rpx 2rpx 0px #000,
    inset -2rpx -2rpx 0px #222,
    inset 1rpx 1rpx 0px #888;
  position: relative;
}

.function-text:active {
  transform: translate(1rpx, 1rpx);
  box-shadow:
    1rpx 1rpx 0px #000,
    inset -1rpx -1rpx 0px #222,
    inset 2rpx 2rpx 0px #888;
}

.function-text.active {
  background: linear-gradient(135deg, #222 0%, #444 50%, #222 100%);
  border-color: #333;
  color: #cccccc;
  text-shadow: 1rpx 1rpx 0px #000000;
}

/* 展开面板 - 悬浮列表样式 */
.expand-panel {
  position: absolute;
  top: -70rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 1000;
  min-width: 300rpx;
}

.panel-content {
  background: linear-gradient(135deg, #333 0%, #555 50%, #333 100%);
  border: 3rpx solid #666;
  border-radius: 12rpx;
  box-shadow:
    0 4rpx 12rpx rgba(0, 0, 0, 0.5),
    0 2rpx 4rpx rgba(0, 0, 0, 0.3),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1),
    inset 0 -1rpx 0 rgba(0, 0, 0, 0.3);
  padding: 15rpx;
  margin: 0;
}

.panel-header {
  font-size: 20rpx;
  color: #ffffff;
  font-family: 'Courier New', monospace;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 0px #000000;
  text-align: center;
  margin-bottom: 12rpx;
}

/* 倍速选项网格 */
.option-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8rpx;
}

.option-btn {
  height: 45rpx;
  background: linear-gradient(135deg, #444 0%, #666 50%, #444 100%);
  border: 2rpx solid #777;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow:
    1rpx 1rpx 0px #000,
    inset -1rpx -1rpx 0px #333,
    inset 1rpx 1rpx 0px #777;
}

.option-btn:active {
  transform: translate(1rpx, 1rpx);
  box-shadow:
    0 0 0px #000,
    inset -1rpx -1rpx 0px #333,
    inset 2rpx 2rpx 0px #777;
}

.option-btn.selected {
  background: linear-gradient(135deg, #555 0%, #888 50%, #555 100%);
  border-color: #aaa;
  box-shadow:
    1rpx 1rpx 0px #000,
    inset -1rpx -1rpx 0px #444,
    inset 1rpx 1rpx 0px #999;
}

.option-text {
  font-size: 16rpx;
  color: #ffffff;
  font-family: 'Courier New', monospace;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 0px #000000;
}

/* 字体大小选项 */
.size-options {
  display: flex;
  justify-content: center;
  gap: 15rpx;
}

.size-option {
  width: 70rpx;
  height: 50rpx;
  background: linear-gradient(135deg, #444 0%, #666 50%, #444 100%);
  border: 2rpx solid #777;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow:
    1rpx 1rpx 0px #000,
    inset -1rpx -1rpx 0px #333,
    inset 1rpx 1rpx 0px #777;
}

.size-option:active {
  transform: translate(1rpx, 1rpx);
  box-shadow:
    0 0 0px #000,
    inset -1rpx -1rpx 0px #333,
    inset 2rpx 2rpx 0px #777;
}

.size-option.selected {
  background: linear-gradient(135deg, #555 0%, #888 50%, #555 100%);
  border-color: #aaa;
  box-shadow:
    1rpx 1rpx 0px #000,
    inset -1rpx -1rpx 0px #444,
    inset 1rpx 1rpx 0px #999;
}

.size-text {
  font-size: 20rpx;
  color: #ffffff;
  font-family: 'Courier New', monospace;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 0px #000000;
}

/* 字体颜色选项 */
.color-options {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
  justify-items: center;
}

.color-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  cursor: pointer;
  transition: all 0.2s ease;
  padding: 8rpx;
  border-radius: 8rpx;
  background: rgba(0, 0, 0, 0.2);
}

.color-option:active {
  transform: scale(0.95);
}

.color-option.selected {
  background: rgba(255, 255, 0, 0.2);
  border: 2rpx solid #ffff00;
}

.color-swatch {
  width: 35rpx;
  height: 35rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.5);
  transition: all 0.2s ease;
}

.color-option.selected .color-swatch {
  border-color: #ffff00;
  box-shadow: 0 0 12rpx rgba(255, 255, 0, 0.8);
  transform: scale(1.1);
}

.color-swatch.black {
  background: #000000;
}

.color-swatch.white {
  background: #ffffff;
}

.color-swatch.green {
  background: #00ff00;
}

.color-swatch.blue {
  background: #0088ff;
}

.color-swatch.red {
  background: #ff0000;
}

.color-swatch.goose {
  background: #ffd700;
}

.color-label {
  font-size: 16rpx;
  color: #ffffff;
  font-family: 'Courier New', monospace;
  text-shadow: 1rpx 1rpx 0px #000000;
}

/* 点击遮罩关闭面板 */
.overlay {
