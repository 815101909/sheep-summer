/* 上新专题和VIP标签样式 */
.title-row {
  display: block;
  margin-bottom: 4rpx;
}

.tags-inline {
  display: inline;
  margin-right: 8rpx;
}

.tag-badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
  height: 32rpx;
  border-radius: 6rpx;
  font-size: 18rpx;
  font-family: 'Courier New', monospace;
  font-weight: bold;
  line-height: 32rpx;
  text-shadow: 1rpx 1rpx 0px rgba(0, 0, 0, 0.5);
  white-space: nowrap;
  vertical-align: middle;
  margin-right: 8rpx;
  position: relative;
  top: -2rpx;
}

.topic-tag {
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.2), rgba(255, 230, 100, 0.2));
  border: 1rpx solid rgba(255, 215, 0, 0.8);
  color: #ffd700;
  box-shadow: 0 0 6rpx rgba(255, 215, 0, 0.3);
}

.vip-tag {
  background: linear-gradient(135deg, rgba(255, 80, 80, 0.2), rgba(255, 120, 120, 0.2));
  border: 1rpx solid rgba(255, 80, 80, 0.8);
  color: #ff8888;
  box-shadow: 0 0 6rpx rgba(255, 80, 80, 0.3);
}

.tag-symbol {
  margin-right: 4rpx;
  font-size: 20rpx;
  line-height: 1;
}
