/* 打卡页面样式 */
.checkin-container {
  position: relative;
  min-height: 100vh;
  overflow: hidden;
}

.page-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

/* 内容区域 */
.checkin-content {
  position: relative;
  z-index: 1;
  padding: 20rpx;
}

/* 确保内容区域有良好的可读性 */
.stats-section,
.avatar-section {
  background: rgba(255, 255, 255, 0.95);
}


/* 统计数据区域 */
.stats-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, rgba(173, 255, 173, 0.3) 0%, rgba(193, 255, 193, 0.3) 100%);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.stats-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  flex: 1;
  position: relative;
}

.stat-item.left,
.stat-item.center,
.stat-item.right {
  align-items: center;
  text-align: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #228B22;
  margin-bottom: 16rpx;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 日历区域 */
.calendar-section {
  background: rgba(255, 250, 205, 0.15);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.calendar-header {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 40rpx;
  margin-bottom: 30rpx;
}

.month-nav {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.calendar-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  min-width: 80rpx;
  text-align: center;
}

.year-nav {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.year-text {
  font-size: 28rpx;
  color: #666;
  min-width: 80rpx;
  text-align: center;
}

.calendar-nav {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.nav-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #228B22;
  color: white;
  border-radius: 30rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.year-text {
  font-size: 28rpx;
  color: #666;
  min-width: 100rpx;
  text-align: center;
}

/* 星期标题 */
.weekday-header {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.weekday {
  text-align: center;
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

/* 日历网格 */
.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
}

.calendar-day {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  border-radius: 12rpx;
  transition: all 0.2s ease;
  cursor: pointer;
}

.calendar-day:hover {
  background: rgba(102, 126, 234, 0.1);
}

.calendar-day.today {
  background: rgba(102, 126, 234, 0.2);
  border: 2rpx solid #228B22;
}

.calendar-day.checked {
  background: #228B22;
  color: white;
}

.calendar-day.checked .day-number {
  color: white;
}

.day-number {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.checkin-dot {
  width: 8rpx;
  height: 8rpx;
  background: #ff4757;
  border-radius: 50%;
  margin-top: 4rpx;
}

/* 打卡成功提示 */
.checkin-success-section {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.success-modal {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 20rpx;
  text-align: center;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.2);
}

.success-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.success-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

.blind-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: transparent;
  border-radius: 20rpx;
  cursor: pointer;
  animation: shake 0.5s ease-in-out infinite;
}

.blind-box:active {
  transform: scale(0.95);
  animation-play-state: paused;
}

.blind-box-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
}

.blind-box-hint {
  font-size: 24rpx;
  color: #666;
  margin-top: 16rpx;
  text-align: center;
}

/* 抖动动画 */
@keyframes shake {
  0%, 100% {
    transform: translateX(0);
  }
  10%, 30%, 50%, 70%, 90% {
    transform: translateX(-1rpx);
  }
  20%, 40%, 60%, 80% {
    transform: translateX(1rpx);
  }
}

/* 盲盒奖励弹窗 */
.reward-section {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.reward-modal {
  background: rgba(255, 250, 205, 0.15);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  margin: 20rpx;
  text-align: center;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.2);
  animation: modalShake 0.6s ease-in-out;
}

.reward-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.reward-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.reward-image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 30rpx rgba(0, 0, 0, 0.15);
  animation: imageGlow 2s ease-in-out infinite;
}

.no-reward-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.no-reward-image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 10rpx;
  border-radius: 12rpx;
}

.reward-btn {
  background: #228B22;
  color: white;
  padding: 20rpx 60rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 形象展示区域 */
.avatar-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.avatar-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}


/* 已解锁形象 */
.all-avatars {
  background: rgba(255, 250, 205, 0.2);
  border-radius: 16rpx;
  padding: 20rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  justify-items: center;
}

.avatar-item {
  text-align: center;
  cursor: pointer;
  transition: transform 0.2s ease;
}

.avatar-item:active {
  transform: scale(0.95);
}

.avatar-image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 16rpx;
  border: 3rpx solid rgba(255, 250, 205, 0.6);
  margin-bottom: 8rpx;
  transition: all 0.2s ease;
}

.avatar-image:active {
  border-color: #228B22;
  transform: scale(1.05);
}

.avatar-label {
  font-size: 22rpx;
  color: #666;
  font-weight: 500;
  display: block;
}


/* 响应式设计 */
@media (max-width: 768px) {
  .checkin-container {
    padding: 15rpx;
  }

  .stats-section {
    padding: 20rpx;
    gap: 15rpx;
  }

  .stats-row {
    flex-direction: row;
    gap: 10rpx;
    justify-content: space-between;
  }

  .stat-item.left,
  .stat-item.center,
  .stat-item.right {
    flex: 1;
  }

  .stat-number {
    font-size: 40rpx;
    margin-bottom: 12rpx;
  }

  .calendar-section {
    padding: 20rpx;
  }

  .avatar-container {
    padding: 20rpx;
  }

  .avatar-image {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
  }

  .blind-box {
    padding: 16rpx;
  }

  .blind-box-image {
    width: 100rpx;
    height: 100rpx;
  }

  .blind-box-hint {
    font-size: 22rpx;
    margin-top: 12rpx;
  }

  .no-reward-image {
    width: 100rpx;
    height: 100rpx;
    margin-bottom: 8rpx;
  }

  .all-avatars {
    padding: 15rpx;
    grid-template-columns: repeat(2, 1fr);
    gap: 15rpx;
  }

  .avatar-item {
    margin: 0;
  }

  .avatar-image {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 6rpx;
  }

  .avatar-label {
    font-size: 20rpx;
  }

  .reward-modal {
    padding: 50rpx 30rpx;
    margin: 15rpx;
  }

  .reward-image {
    width: 250rpx;
    height: 250rpx;
  }
}

/* 弹窗晃动动画 */
@keyframes modalShake {
  0%, 100% {
    transform: translateX(0) scale(1);
  }
  10%, 30%, 50%, 70%, 90% {
    transform: translateX(-3rpx) scale(1.02);
  }
  20%, 40%, 60%, 80% {
    transform: translateX(3rpx) scale(1.02);
  }
}

/* 图片发光动画 */
@keyframes imageGlow {
  0%, 100% {
    box-shadow: 0 6rpx 30rpx rgba(0, 0, 0, 0.15);
  }
  50% {
    box-shadow: 0 6rpx 30rpx rgba(102, 126, 234, 0.3), 0 0 40rpx rgba(102, 126, 234, 0.2);
  }
}
