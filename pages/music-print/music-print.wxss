.container {
  height: 100vh;
  background: linear-gradient(135deg, #e6f3ff 0%, #f0f8ff 50%, #f5faff 100%);
  position: relative;
  padding: 0;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  overflow-y: hidden;
}

.bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.3;
  z-index: 1;
}

.h-scroll {
  width: 100%;
  height: 100vh;
  position: relative;
  overflow: hidden;
  z-index: 2;
}

.control-bar {
  position: absolute;
  bottom: calc(40rpx + env(safe-area-inset-bottom));
  left: 0;
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
  pointer-events: auto;
}

.nav-btn {
  background-color: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(4px);
  padding: 20rpx 32rpx;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  color: #555;
  font-size: 24rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.nav-btn:active {
  transform: scale(0.95);
  background-color: #fff;
}

.nav-btn.disabled {
  opacity: 0.5;
  background-color: rgba(255, 255, 255, 0.5);
  box-shadow: none;
}

.page-indicator {
  font-family: 'Courier New', Courier, monospace;
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
  background-color: rgba(255, 255, 255, 0.6);
  padding: 10rpx 24rpx;
  border-radius: 20rpx;
}
.h-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100%;
  width: 100%;
  transition: transform 0.3s ease-out;
}
.polaroid-wrapper {
  height: 100%;
  width: 100vw;
  min-width: 100vw;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 10;
}

.polaroid {
  background: #fff;
  padding: 20rpx 20rpx 56rpx 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 0;
  width: 92%;
  box-sizing: border-box;
  transition: transform 0.3s;
  position: relative;
}

.rotate-left {
  transform: rotate(-2deg);
}

.rotate-right {
  transform: rotate(2deg);
}

.photo-frame {
  position: relative;
  width: 100%;
  height: 0;
  padding-top: 141.4%;
  background-color: #f0f0f0;
  overflow: hidden;
}

.polaroid-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block;
}

.handwriting {
  margin-top: 30rpx;
  text-align: center;
  color: #555;
  font-size: 28rpx;
  font-family: 'Courier New', Courier, monospace;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.date {
  font-size: 24rpx;
  color: #999;
}

.empty-tip {
  margin-top: 200rpx;
  color: #999;
  font-size: 28rpx;
  font-family: 'Courier New', monospace;
}
