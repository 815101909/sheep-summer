/* 页面全局样式 */
page {
  height: 100vh;
  overflow: hidden;
}

.css-heart {
  position: relative;
  width: 24rpx;
  height: 24rpx;
  background-color: #34495e;
  margin-top: 8rpx;
}
.css-heart::before,
.css-heart::after {
  content: "";
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  background-color: #34495e;
  border-radius: 50%;
}
.css-heart::before { top: -12rpx; left: 0; }
.css-heart::after { left: -12rpx; top: 0; }
.css-heart.filled,
.css-heart.filled::before,
.css-heart.filled::after {
  background-color: #e74c3c;
}
.css-heart, .css-heart::before, .css-heart::after {
  transition: background-color 0.3s ease;
}

.action-btn.favorite-btn .css-heart { transform: rotate(45deg) scale(1.2); }
.a4-action-btn.favorite-btn .css-heart { transform: rotate(45deg) scale(1.2); }

@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0.7; }
}

/* 背景层 */
.background-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: -1;
  opacity: 0.3;
}

.background-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 主容器布局 */
.main-content {
  display: block;
  height: calc(100vh - 85rpx);
  margin-top: 55rpx;
  overflow: hidden;
}

/* 侧边栏样式 */
.sidebar {
  width: 600rpx;
  background: transparent;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 0;
  margin: 130rpx auto 10rpx auto;
  padding: 30rpx 20rpx;
  box-shadow:
    0 0 0 2rpx rgba(0, 0, 0, 0.5),
    inset 0 0 0 2rpx rgba(255, 255, 255, 0.3);
  image-rendering: pixelated;
  flex-shrink: 0;
}

.mode-selector {
  display: flex;
  flex-direction: row;
  gap: 50rpx;
  justify-content: center;
}

.mode-btn {
  padding: 16rpx 14rpx;
  background: rgba(0, 0, 0, 0.3);
  border: 3rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 0;
  font-size: 24rpx;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow:
    0 0 0 2rpx rgba(0, 0, 0, 0.2),
    inset 0 0 0 2rpx rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(5rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  position: relative;
  overflow: visible;
  white-space: nowrap;
  font-family: 'Courier New', monospace;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  image-rendering: pixelated;
}

