@keyframes dropAndBounce {
  0% {
    top: -100rpx;
    transform: translateX(0);
  }
  60% {
    top: calc(100vh - 580rpx);
    transform: translateX(0);
    animation-timing-function: ease-out;
  }
  80% {
    top: calc(100vh - 900rpx);
    transform: translateX(calc(250rpx * var(--bounce-dir, 1)));
  }
  100% {
    top: 100vh;
    transform: translateX(calc(350rpx * var(--bounce-dir, 1)));
    opacity: 0;
  }
}
