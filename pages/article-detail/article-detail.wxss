/* A4区域样式 */
.a4-mode {
  background: transparent; /* 透明背景，让底层背景图片显示 */
}

.a4-container {
  position: absolute;
  top: calc(50% - 75rpx); /* 向上平移75rpx */
  left: 50%;
  transform: translate(-50%, -50%);
  display: none;
  z-index: 100;
}

.a4-container.active {
  display: block;
}

.a4-paper {
  width: 595rpx;
  min-height: 842rpx;
  height: auto;
  background: rgba(255, 255, 255, 0.9);
  border: 3rpx solid #d4d4d4;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  padding: 40rpx;
  box-sizing: border-box;
}

.a4-content {
  height: 100%;
}

.a4-default-image {
  position: absolute;
  bottom: -260rpx;
  right: -40rpx;
  width: 300rpx;
  height: 300rpx;
  z-index: 10000;
  animation: floatAndRotate 3s ease-in-out infinite;
  cursor: pointer;
}

@keyframes floatAndRotate {
  0% { transform: translateY(0) rotate(0deg); }
  25% { transform: translateY(-10rpx) rotate(5deg); }
  50% { transform: translateY(0) rotate(0deg); }
  75% { transform: translateY(10rpx) rotate(-5deg); }
  100% { transform: translateY(0) rotate(0deg); }
}

.tip-label {
  position: absolute;
  bottom: 250rpx;
  right: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  opacity: 0;
  transform: translateY(20rpx) scale(0.8);
  transition: all 0.3s ease;
  z-index: 1002;
  max-width: 300rpx;
  word-wrap: break-word;
}

.tip-label.show {
  opacity: 1;
  transform: translateY(0) scale(1);
}

.tip-text {
  font-size: 26rpx;
  font-weight: 500;
  line-height: 1.4;
  display: block;
  text-align: center;
}

.tip-arrow {
  position: absolute;
  bottom: -8rpx;
  right: 30rpx;
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 8rpx solid #764ba2;
}

.date-icon {
  width: 28rpx;
  height: 28rpx;
}

@media (max-width: 768px) {
  .a4-paper {
    width: 90vw;
    height: 127vw;
    padding: 30rpx;
  }

  .a4-default-image {
    width: 280rpx;
    height: 280rpx;
    bottom: -220rpx;
    right: -35rpx;
  }

  .tip-label {
    bottom: 200rpx;
    right: 50rpx;
  }

  .tip-text {
    font-size: 22rpx;
  }
}

