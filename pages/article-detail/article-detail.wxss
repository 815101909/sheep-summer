/* 颜料板 */
.palette-container {
  position: absolute;
  top: 50%;
  left: -60rpx;
  transform: translateY(-50%);
  background: rgba(255, 255, 255, 0.9);
  padding: 16rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(10rpx);
  z-index: 100;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}

.palette-colors {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  max-height: 600rpx;
  overflow-y: auto;
}

.color-item {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
  transition: all 0.2s ease;
  position: relative;
}

.color-item.active {
  transform: scale(1.2);
  border-color: #fff;
  box-shadow: 0 0 0 2rpx rgba(0,0,0,0.15), 0 4rpx 12rpx rgba(0,0,0,0.2);
  z-index: 10;
}

.color-item.active::after {
  content: '';
  position: absolute;
  top: 45%;
  left: 50%;
  width: 10rpx;
  height: 20rpx;
  border-right: 4rpx solid #fff;
  border-bottom: 4rpx solid #fff;
  transform: translate(-50%, -60%) rotate(45deg);
  filter: drop-shadow(0 1rpx 2rpx rgba(0,0,0,0.3));
}

/* 移动端适配颜料板 */
@media (max-width: 380px) {
  .palette-container {
    left: 20rpx;
    top: auto;
    bottom: -140rpx;
    transform: none;
    width: calc(100% - 40rpx);
    flex-direction: row;
  }
  
  .palette-colors {
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    max-height: none;
    gap: 24rpx;
  }
}

