  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
}

.action-btn:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.95);
}

