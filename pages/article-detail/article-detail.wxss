/* pages/article-detail/article-detail.wxss */

/* 页面全局样式 */
page {
  min-height: 100vh;
}

.css-heart {
  position: relative;
  width: 24rpx;
  height: 24rpx;
  background-color: #34495e;
  margin-top: 8rpx;
}
.css-heart::before,
.css-heart::after {
  content: "";
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  background-color: #34495e;
  border-radius: 50%;
}
.css-heart::before { top: -12rpx; left: 0; }
.css-heart::after { left: -12rpx; top: 0; }
.css-heart.filled,
.css-heart.filled::before,
.css-heart.filled::after {
  background-color: #e74c3c;
}
.css-heart, .css-heart::before, .css-heart::after {
  transition: background-color 0.3s ease;
}

.action-btn.favorite-btn .css-heart { transform: rotate(45deg) scale(1.2); }
.a4-action-btn.favorite-btn .css-heart { transform: rotate(45deg) scale(1.2); }
.css-print {
  position: relative;
  width: 44rpx;
  height: 30rpx;
  background-color: #34495e;
  border-radius: 6rpx;
}
.css-print::after {
  content: "";
  position: absolute;
  top: -10rpx;
  left: 6rpx;
  right: 6rpx;
  height: 10rpx;
  background-color: #34495e;
  border-radius: 4rpx 4rpx 0 0;
}
.css-print::before {
  content: "";
  position: absolute;
  left: 6rpx;
  right: 6rpx;
  bottom: -12rpx;
  height: 20rpx;
  background-color: #ffffff;
  border: 2rpx solid #34495e;
  border-radius: 2rpx;
  box-shadow: inset 0 -6rpx 0 0 rgba(0,0,0,0.08);
}

@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0.7; }
}

/* 背景层 */
.background-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: -1;
  opacity: 0.3;
}

.background-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.background-container.dark::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.35);
  z-index: 0;
}

/* 主容器布局 */
.main-content {
  display: flex;
  flex-direction: column;
  height: calc(100vh - 85rpx);
  margin-top: 55rpx;
  overflow: hidden;
  min-height: 0;
  box-sizing: border-box;
  padding-bottom: 50rpx;
  padding-bottom: calc(50rpx + env(safe-area-inset-bottom));
}

.main-content.a4-mode {
