/* 客服页面样式 */
.service-container {
  position: relative;
  min-height: 100vh;
  overflow: hidden;
}

.page-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

/* 内容区域 */
.service-content {
  position: relative;
  z-index: 1;
  padding: 20rpx;
}

/* 页面标题 */
.page-title-section {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

/* 次标题样式 */
.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  margin-bottom: 16rpx;
  margin-top: 20rpx;
  display: block;
  text-align: left;
  padding-left: 20rpx;
}

/* 联系方式 */
.contact-section {
  margin-bottom: 40rpx;
  max-width: 700rpx;
  margin-left: auto;
  margin-right: auto;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background: rgba(255, 250, 205, 0.15);
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
  cursor: pointer;
}

.contact-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.12);
}

.contact-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 60rpx;
  text-align: center;
}

.contact-info {
  flex: 1;
}

.contact-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
  display: block;
}

.contact-value {
  font-size: 24rpx;
  color: #667eea;
}

.contact-arrow {
  font-size: 24rpx;
  color: #ccc;
  margin-left: 20rpx;
}

/* 复制按钮样式 */
.contact-copy-btn {
  background: transparent;
  color: #2c3e50;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  min-width: 80rpx;
  text-align: center;
  border: 2rpx dashed rgba(135, 206, 235, 0.7);
}

/* 工作时间 */
.time-section {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: rgba(255, 250, 205, 0.15);
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  max-width: 650rpx;
  margin-left: auto;
  margin-right: auto;
}

.time-info {
  text-align: left;
}

.time-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.time-note {
  font-size: 24rpx;
  color: #999;
}

/* 客服中心图片 */
.service-image-section {
  margin-top: 40rpx;
  text-align: center;
}

.service-image {
  width: 730rpx;
  height: 250rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.image-caption {
  display: block;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin-top: 16rpx;
  font-weight: 400;
}


/* 响应式设计 */
@media (max-width: 768px) {
  .service-content {
    padding: 15rpx;
  }

  .page-title-section {
    margin-bottom: 30rpx;
    padding: 30rpx 15rpx;
  }

  .page-title {
    font-size: 32rpx;
  }

  .section-title {
    font-size: 26rpx;
    padding-left: 15rpx;
    margin-top: 16rpx;
  }

  .contact-item {
    padding: 25rpx 20rpx;
    margin-bottom: 15rpx;
    background: rgba(255, 250, 205, 0.15);
  }

  .contact-icon {
    font-size: 36rpx;
    width: 50rpx;
  }

  .contact-label {
    font-size: 26rpx;
  }

  .contact-value {
    font-size: 22rpx;
  }

  .contact-copy-btn {
    padding: 10rpx 20rpx;
    font-size: 22rpx;
    min-width: 70rpx;
    background: transparent;
    border: 2rpx dashed rgba(135, 206, 235, 0.7);
  }

  .contact-section {
    max-width: 600rpx;
    margin-left: auto;
    margin-right: auto;
  }

  .time-section {
    padding: 25rpx 20rpx;
    background: rgba(255, 250, 205, 0.15);
    max-width: 550rpx;
    margin-left: auto;
    margin-right: auto;
  }

  .time-text {
    font-size: 26rpx;
  }

  .time-note {
    font-size: 22rpx;
  }

  .service-image-section {
    margin-top: 30rpx;
  }

  .service-image {
    width: 630rpx;
    height: 170rpx;
  }

  .image-caption {
    font-size: 22rpx;
    margin-top: 12rpx;
  }

}
