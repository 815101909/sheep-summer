<view class="service-container">
  <!-- 背景图片 -->
  <image class="page-bg" src="/assets/images/splash-bg.png" mode="aspectFill" />

  <!-- 页面内容 -->
  <view class="service-content">
    <!-- 页面标题 -->
    <view class="page-title-section">
      <text class="page-title">联系客服</text>
    </view>

    <!-- 联系方式标题 -->
    <text class="section-title">｜联系我们</text>

    <!-- 联系方式 -->
    <view class="contact-section">
      <view class="contact-item" bindtap="copyWechat">
        <view class="contact-icon">💬</view>
        <view class="contact-info">
          <text class="contact-label">微信客服</text>
          <text class="contact-value">xiaovisiontogether</text>
        </view>
        <view class="contact-copy-btn" bindtap="copyWechat">复制</view>
      </view>

      <view class="contact-item" bindtap="copyEmail">
        <view class="contact-icon">📧</view>
        <view class="contact-info">
          <text class="contact-label">邮箱客服</text>
          <text class="contact-value">xiaoxiaovision@foxmail.com</text>
        </view>
        <view class="contact-copy-btn" bindtap="copyEmail">复制</view>
      </view>
    </view>

    <!-- 工作时间标题 -->
    <text class="section-title">｜工作时间</text>

    <!-- 工作时间 -->
    <view class="time-section">
      <view class="time-info">
        <text class="time-text">周一至周五：9:00-19:00</text>
        <text class="time-note">节假日客服时间可能有调整，请以公众号通知为准</text>
      </view>
    </view>

    <!-- 客服中心图片 -->
    <view class="service-image-section">
      <image class="service-image" src="/assets/images/客服中心.png" mode="aspectFit" bindtap="previewImage" bindlongpress="onLongPressImage" />
      <text class="image-caption">点击查看大图，长按识别二维码</text>
    </view>
  </view>
</view>
