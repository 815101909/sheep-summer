.weekly-container {
  position: relative;
  height: 100vh;
  overflow: hidden;
  display: flex;
  justify-content: center;
  padding-top: 60rpx;
  padding-bottom: 40rpx;
}
.weekly-container.dark::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.35);
  z-index: 0;
}

.page-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.report-card {
  position: relative;
  z-index: 1;
  width: 690rpx;
  background: rgba(255, 255, 255, 0.85);
  border-radius: 32rpx;
  padding: 12rpx 30rpx;
  box-shadow: 0 16rpx 40rpx rgba(34, 139, 34, 0.15);
  display: flex;
  flex-direction: column;
  gap: 14rpx;
  animation: fadeIn 0.8s ease-out;
}
.report-card.dark {
  background: rgba(24, 24, 24, 0.85);
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.35);
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.animate-item {
  opacity: 0;
  animation: fadeInUp 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
}

.card-header    { animation-delay: 0.2s; }
.title-section  { animation-delay: 0.4s; }
.stat-box:nth-child(1) { animation-delay: 0.6s; }
.stat-box:nth-child(2) { animation-delay: 0.7s; }
.stat-box:nth-child(3) { animation-delay: 0.8s; }
.stat-box:nth-child(4) { animation-delay: 0.9s; }
.stat-box:nth-child(5) { animation-delay: 1.0s; }
.stat-box:nth-child(6) { animation-delay: 1.1s; }
.stat-box:nth-child(7) { animation-delay: 1.2s; }
.summary-paper  { animation-delay: 1.4s; }
.footer-actions { animation-delay: 1.6s; }

.card-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  position: relative;
}

.avatar-box {
  position: relative;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.header-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.greeting {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.report-card.dark .greeting {
  color: #ffffff;
}

.sub-greeting {
  font-size: 24rpx;
  color: #666;
  font-style: italic;
}
.report-card.dark .sub-greeting {
  color: #cfcfcf;
}

.date-badge {
  position: absolute;
  right: 0;
  top: 0;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  padding: 8rpx 20rpx;
  border-radius: 30rpx 0 0 30rpx;
  margin-right: -40rpx;
  box-shadow: -2rpx 4rpx 10rpx rgba(255, 154, 158, 0.3);
}

.week-keyword {
  font-size: 24rpx;
  color: #fff;
  font-weight: bold;
  letter-spacing: 2rpx;
}

.title-section {
  text-align: center;
  margin-bottom: 6rpx;
}

.main-title {
  display: block;
  font-size: 44rpx;
  font-weight: 800;
  color: #2e8b57;
  letter-spacing: 2rpx;
  margin-bottom: 8rpx;
}
.report-card.dark .main-title {
  color: #b9f6ca;
}

.date-range {
  font-size: 24rpx;
  color: #999;
  background: #f0fdf4;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
}
.report-card.dark .date-range {
  color: #d0f0d0;
  background: rgba(46, 139, 87, 0.15);
}

/* 报告章节通用样式 */
.report-section {
  margin-bottom: 60rpx;
  padding: 0 10rpx;
}

.section-title-box {
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 400;
  letter-spacing: 4rpx;
}

.title-line {
  flex: 1;
  height: 1rpx;
  background: #eee;
}

.stats-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.stat-item {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  font-weight: 300;
  width: 120rpx;
}

.stat-value {
  font-size: 40rpx;
  color: #222;
  font-weight: 200;
}

.stat-unit {
  font-size: 20rpx;
  color: #bbb;
}

.stat-hint {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #aaa;
  font-weight: 300;
  font-style: italic;
}

.highlight {
  color: #333;
  font-weight: 400;
  margin: 0 4rpx;
}

.bullet-item {
  font-size: 24rpx;
  color: #666;
  font-weight: 300;
  position: relative;
  padding-left: 30rpx;
}

.bullet-item::before {
  content: '·';
  position: absolute;
  left: 0;
  font-weight: bold;
}

.meaning-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.meaning-text {
  font-size: 26rpx;
  color: #444;
  font-weight: 300;
  letter-spacing: 2rpx;
}

.meaning-sub {
  font-size: 24rpx;
  color: #888;
  font-weight: 300;
}

.summary-paper {
  position: relative;
  margin-top: 40rpx;
  padding-bottom: 60rpx;
}

.summary-footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  position: relative;
}
.report-card.dark .summary-footer {
  color: #666;
}

.footer-text{
  margin-right: 50rpx;
}

.stamp {
  position: absolute;
  right: -30rpx;
  bottom: -20rpx;
  width: 100rpx;
  height: 100rpx;
  opacity: 0.8;
  transform: rotate(-15deg);
}

.footer-actions {
  margin-top: -32rpx;
  padding-bottom: 80rpx; /* 增加底部内边距，使按钮上移并远离系统底栏 */
}

.share-btn {
  background: linear-gradient(90deg, #4facfe 0%, #00f2fe 100%);
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(79, 172, 254, 0.4);
  border: none;
}
.share-btn::after { border: none; }
