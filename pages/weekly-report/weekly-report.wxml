<view class="weekly-container {{themeClass}}">
  <image class="page-bg" src="/assets/images/splash-bg.png" mode="aspectFill" />
  
  <view class="report-card {{themeClass}}">
    <!-- 头部区域：头像、问候语 -->
    <view class="card-header animate-item">
      <view class="avatar-box">
        <image class="avatar" src="{{userInfo.avatarUrl || '/assets/images/小卡片默认形象.png'}}" mode="aspectFill" />
      </view>
      <view class="header-text">
        <text class="greeting">Hi {{userInfo.name}}，见信如晤</text>
        <text class="sub-greeting">{{greeting}}</text>
      </view>
      <view class="date-badge">
        <text class="week-keyword">{{keyword}}</text>
      </view>
    </view>

    <!-- 标题区域 -->
    <view class="title-section animate-item">
      <text class="main-title">本周成长报告</text>
      <text class="date-range">{{weekRangeText}}</text>
    </view>

    <!-- 第一块：行为数据 -->
    <view class="report-section animate-item">
      <view class="section-title-box">
        <text class="section-title">行为数据</text>
        <view class="title-line"></view>
      </view>
      <view class="stats-list">
        <view class="stat-item">
          <text class="stat-label">本周坐下</text>
          <text class="stat-value">{{focusCountThisWeek}}</text>
          <text class="stat-unit">次</text>
        </view>
        <view class="stat-item">
          <text class="stat-label">贡献里程</text>
          <text class="stat-value">{{weeklyContributionKm}}</text>
          <text class="stat-unit">公里</text>
        </view>
        <view class="stat-item">
          <text class="stat-label">连续天数</text>
          <text class="stat-value">{{streakDays}}</text>
          <text class="stat-unit">天</text>
        </view>
        <view class="stat-hint">
          你超过了 <text class="highlight">{{surpassPercent}}%</text> 的同行者
        </view>
      </view>
    </view>

    <!-- 第二块：集体进度 -->
    <view class="report-section animate-item">
      <view class="section-title-box">
        <text class="section-title">集体进度</text>
        <view class="title-line"></view>
      </view>
      <view class="stats-list">
        <view class="bullet-item">本周集体前进 <text class="highlight">{{weeklyCollectiveKm}}</text> 公里</view>
        <view class="bullet-item">我们正在向 <text class="highlight">{{currentDirection}}</text> 前进</view>
        <view class="bullet-item">当前距离起点已有 <text class="highlight">{{totalKm}}</text> 公里</view>
      </view>
    </view>

    <!-- 第三块：个人意义 -->
    <view class="report-section animate-item">
      <view class="section-title-box">
        <text class="section-title">个人意义</text>
        <view class="title-line"></view>
      </view>
      <view class="meaning-content">
        <text class="meaning-text">你的选择改变了轨迹。</text>
        <text class="meaning-sub">有 <text class="highlight">{{decisionKm}}</text> 公里，是你决定的方向。</text>
      </view>
    </view>

    <!-- 总结信笺 -->
    <view class="summary-paper animate-item">
      <view class="summary-footer">
        <text class="footer-text">—— 你的夏小咩</text>
        <image class="stamp" src="/assets/images/小绵羊.png" mode="aspectFit" />
      </view>
    </view>

    <!-- 底部按钮 -->
    <view class="footer-actions animate-item">
      <button class="share-btn" open-type="share">分享我的夏天</button>
    </view>
  </view>
</view>
