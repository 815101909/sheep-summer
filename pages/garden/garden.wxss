  position: relative;
  top: 12rpx; /* 向上平移3rpx：15rpx - 3rpx */
}

.column-title {
  font-size: 29rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-left: 10rpx;
}
 .a4-preview-paper.dark .column-title {
   color: #eaeaea;
 }

.title-section {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.title-row {
  display: flex;
  align-items: center;
  margin-bottom: 9rpx; /* 增加间距3rpx，从6rpx到9rpx */
}

.separator {
  font-size: 24rpx;
  color: #7f8c8d;
  margin: 0 8rpx;
}
 .a4-preview-paper.dark .separator {
   color: #bdbdbd;
 }

.column-desc-inline {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.4;
}
 .a4-preview-paper.dark .column-desc-inline {
   color: #d8d8d8;
 }

.column-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  gap: 8rpx;
}

.column-desc {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.4;
  margin-left: 100rpx; /* 向右平移15rpx：85rpx + 15rpx */
  margin-top: -40rpx; /* 向上平移40rpx */
}

/* 状态信息区域 */
.column-status {
  display: flex;
  align-items: flex-start;
  margin-left: 10rpx; /* 向右平移10rpx */
}

.status-text {
  font-size: 22rpx;
  color: #34495e;
  line-height: 1.3;
}
 .a4-preview-paper.dark .status-text {
   color: #d8d8d8;
 }

.vip-button {
  background: linear-gradient(135deg, #f39c12, #e67e22);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  margin-top: 4rpx;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #7f8c8d;
  display: block;
}

/* 设置选项 */
.settings-section {
  position: relative;
  z-index: 2;
  margin: -310rpx 40rpx 0;
  display: flex;
  justify-content: space-around; /* 水平排列，平均分布 */
  gap: 20rpx; /* 元素间距 */
}
.settings-section.dark .setting-item {
  background: rgba(18, 18, 18, 0.9);
  border: 1rpx solid rgba(255, 255, 255, 0.08);
}
.settings-section.dark .setting-text {
  color: #ffffff;
}
.settings-section.dark .setting-arrow {
  color: #c9c9c9;
}

.setting-item {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  width: 220rpx; /* 宽度增加20rpx */
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.setting-item:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.95);
}

.setting-image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
  border-radius: 8rpx;
}

/* 帮助中心图片调整尺寸 */
.setting-item:nth-child(2) .setting-image {
  width: 40rpx;
  height: 40rpx;
}

/* 帮助中心文字向右平移6rpx */
.setting-item:nth-child(2) .setting-text {
  margin-left: 6rpx;
}

.setting-text {
  flex: 1;
  font-size: 24rpx;
  color: #2c3e50;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.setting-arrow {
  font-size: 24rpx;
  color: #95a5a6;
}

