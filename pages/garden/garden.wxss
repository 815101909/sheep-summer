/* pages/hoofprint/hoofprint.wxss */
.page {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
  overflow: hidden;
}

.page-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  opacity: 0.3;
}

/* ========== 上边区域：轻量、留白、文本质感 ========== */
.edge-top {
  position: absolute;
  top: 0;
  left: 56rpx;
  right: 56rpx;
  z-index: 3;
  padding: 24rpx 0 16rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  gap: 16rpx;
}

.edge-top-inner {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.edge-btns {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 20rpx;
}

.edge-btn-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 14rpx 24rpx;
  background: rgba(255, 252, 248, 0.95);
  border: 1rpx solid rgba(139, 115, 85, 0.18);
  border-radius: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(92, 74, 50, 0.06);
}

.edge-btn-item:active {
  background: rgba(250, 246, 238, 0.98);
  transform: scale(0.98);
}

.edge-btn-icon {
  font-size: 28rpx;
  line-height: 1;
}

.edge-btn-text {
  font-size: 24rpx;
  font-weight: 400;
  color: #5c4a32;
  letter-spacing: 1.5rpx;
}

.edge-live {
  display: flex;
  align-items: baseline;
  gap: 6rpx;
}

.edge-live-num {
  font-size: 26rpx;
  font-weight: 300;
  color: #8b7355;
  letter-spacing: 0.5rpx;
}

.edge-live-text {
  font-size: 22rpx;
  color: rgba(122, 111, 92, 0.75);
  letter-spacing: 1rpx;
}

.edge-countdown-wrap {
  padding: 28rpx 48rpx 24rpx;
  background: linear-gradient(180deg, #fdfaf5 0%, #f5f0e6 100%);
  border-radius: 28rpx;
  border: 2rpx solid rgba(139, 115, 85, 0.18);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(92, 74, 50, 0.08), inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  min-width: 360rpx;
}

.edge-countdown-wrap:active {
  opacity: 0.92;
}

.edge-countdown-label {
  font-size: 24rpx;
  color: rgba(139, 115, 85, 0.85);
  letter-spacing: 6rpx;
  font-weight: 400;
}

.edge-countdown-value {
  font-size: 32rpx;
  font-weight: 300;
  color: #5c4a32;
  letter-spacing: 4rpx;
}

.edge-countdown-hint {
  font-size: 20rpx;
  color: rgba(92, 74, 50, 0.55);
  letter-spacing: 3rpx;
}

.edge-sit-row {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}
.edge-sit-picker-trigger .edge-sit-mins-wrap {
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 16rpx;
  border: 1rpx dashed rgba(139, 115, 85, 0.35);
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.5);
}
.edge-sit-mins {
  font-size: 26rpx;
  font-weight: 300;
  color: #5c4a32;
  letter-spacing: 4rpx;
}
.edge-sit-arrow {
  font-size: 18rpx;
  color: rgba(139, 115, 85, 0.6);
  line-height: 1;
}
.edge-sit-start {
  padding-left: 20rpx;
  border-left: 1rpx solid rgba(139, 115, 85, 0.15);
  letter-spacing: 3rpx;
}

/* ========== 下边区域：坐下倒计时居中 + 两枚主入口 ========== */
.edge-countdown-center {
  align-self: center;
  margin-bottom: 16rpx;
}

.edge-bottom {
  position: absolute;
  bottom: 150rpx;
  left: 56rpx;
  right: 56rpx;
  z-index: 3;
  padding: 20rpx 0 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.edge-bottom-cards {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
  gap: 64rpx;
}

.edge-card {
  padding: 20rpx 32rpx;
  flex-shrink: 0;
  background: rgba(255, 252, 248, 0.92);
  border: 1rpx solid rgba(139, 115, 85, 0.12);
  border-radius: 24rpx;
  box-shadow: 0 6rpx 24rpx rgba(92, 74, 50, 0.06);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.edge-card:active {
  opacity: 0.92;
}

.edge-card-title {
  font-size: 26rpx;
  font-weight: 300;
  color: #5c4a32;
  letter-spacing: 6rpx;
  white-space: nowrap;
}

.edge-card-flick .edge-card-title {
  letter-spacing: 6rpx;
}

.frame-bg {
  position: absolute;
  top: 100rpx;
  left: 50rpx;
  right: 50rpx;
  bottom: 280rpx;
  z-index: 1;
  background: rgba(255, 255, 255, 0.85);
  border: 4rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 16rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.frame-bg2 {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.frame-bg-quote-wrap {
  position: absolute;
  top: 18%;
  left: 0;
  right: 0;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 48rpx;
  box-sizing: border-box;
}
.frame-bg-quote-line {
  width: 56rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(139, 115, 85, 0.22), transparent);
  margin-bottom: 24rpx;
}
.frame-bg-quote {
  font-size: 28rpx;
  line-height: 2.1;
  color: rgba(92, 74, 50, 0.88);
  letter-spacing: 10rpx;
  text-align: center;
  font-weight: 300;
  text-shadow: 0 2rpx 16rpx rgba(255, 255, 255, 0.95), 0 1rpx 6rpx rgba(255, 252, 248, 0.7);
  max-width: 100%;
}
.frame-bg-quote-line-bottom {
  width: 56rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, rgba(139, 115, 85, 0.22), transparent);
  margin-top: 24rpx;
}

/* 坐下途中切出：夏小咩已离开 */
.away-notice-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 5;
  background: rgba(250, 246, 238, 0.92);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
  box-sizing: border-box;
}

.away-notice-card {
  padding: 48rpx 40rpx;
  background: rgba(255, 252, 248, 0.98);
  border: 1rpx solid rgba(139, 115, 85, 0.15);
  border-radius: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(92, 74, 50, 0.08);
  max-width: 560rpx;
}

.away-notice-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #5c4a32;
  letter-spacing: 1.5rpx;
  text-align: center;
}

.bench-wrap {
  position: absolute;
  width: 50%;
  height: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
}

.bench-hint {
  margin-bottom: 0;
  padding: 12rpx 28rpx 10rpx;
  background: rgba(255, 252, 248, 0.96);
  border: 1rpx solid rgba(139, 115, 85, 0.2);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(92, 74, 50, 0.08);
  font-size: 24rpx;
  color: #5c4a32;
  letter-spacing: 1.5rpx;
  max-width: 80vw;
  text-align: center;
  line-height: 1.35;
  transform: translateY(50rpx);
}

.bench-img {
  margin-top: 1rpx;
  width: 100%;
  height: 100%;
  display: block;
}

.edge-sit-row {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}
.edge-sit-mins {
  font-size: 24rpx;
  color: #5c4a32;
  letter-spacing: 1rpx;
}
.edge-sit-start {
  margin-left: 8rpx;
}

/* ========== 接力鼓励弹层：文艺治愈水彩风 ========== */
.relay-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  background: rgba(250, 246, 238, 0.85);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
  box-sizing: border-box;
}

.relay-card {
  width: 100%;
  max-width: 600rpx;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 48rpx rgba(92, 74, 50, 0.12), 0 0 0 1rpx rgba(139, 115, 85, 0.08);
}

.relay-card-inner {
  background: linear-gradient(180deg, rgba(255, 253, 248, 0.98) 0%, rgba(252, 248, 240, 0.98) 100%);
  padding: 56rpx 44rpx 44rpx;
  border-radius: 32rpx;
  border: 2rpx solid rgba(210, 190, 160, 0.35);
}

.relay-label {
  display: block;
  font-size: 24rpx;
  color: rgba(139, 115, 85, 0.75);
  letter-spacing: 3rpx;
  margin-bottom: 24rpx;
  text-align: center;
}

.relay-message {
  display: block;
  font-size: 32rpx;
  line-height: 1.65;
  color: #5c4a32;
  letter-spacing: 2rpx;
  text-align: center;
  padding: 32rpx 24rpx 40rpx;
  margin-bottom: 16rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 20rpx;
  border: 1rpx solid rgba(139, 115, 85, 0.1);
  font-weight: 300;
}

.relay-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 8rpx;
}

.relay-btn {
  padding: 28rpx 40rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  text-align: center;
}

.relay-btn-keep {
  background: linear-gradient(135deg, rgba(180, 160, 130, 0.2) 0%, rgba(200, 182, 155, 0.15) 100%);
  color: #5c4a32;
  border: 1rpx solid rgba(139, 115, 85, 0.25);
}

.relay-btn-pass {
  background: linear-gradient(135deg, rgba(139, 115, 85, 0.12) 0%, rgba(139, 115, 85, 0.08) 100%);
  color: #6b5a42;
  border: 1rpx solid rgba(139, 115, 85, 0.2);
}

.relay-btn-submit {
  background: linear-gradient(135deg, rgba(139, 115, 85, 0.25) 0%, rgba(139, 115, 85, 0.18) 100%);
  color: #5c4a32;
  border: 1rpx solid rgba(139, 115, 85, 0.3);
  font-weight: 500;
}

.relay-btn:active {
  opacity: 0.9;
}

.relay-step-write .relay-label {
  margin-bottom: 20rpx;
}

.relay-input {
  width: 100%;
  min-height: 180rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #5c4a32;
  letter-spacing: 1.5rpx;
  background: rgba(255, 255, 255, 0.7);
  border: 1rpx solid rgba(139, 115, 85, 0.15);
  border-radius: 20rpx;
  box-sizing: border-box;
}

.edge-card-guide .edge-btn-icon {
  font-size: 22rpx;
  flex-shrink: 0;
}

/* ========== 攻略弹窗 ========== */
.guide-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 200;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
  box-sizing: border-box;
}

.guide-modal {
  position: relative;
  width: 100%;
  max-width: 680rpx;
  max-height: 90vh;
  height: 80vh;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
  margin-top: -60rpx; /* 整体向上移动弹窗 */
}

.guide-swiper {
  width: 100%;
  flex: 1;
  height: auto;
  max-height: 100%;
}

.guide-image-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.guide-no-images {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.guide-no-images-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.guide-image {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: contain; /* 确保图片按比例适应容器 */
}

.guide-close {
  position: absolute;
  top: 16rpx; /* 向上移动，从20rpx改为16rpx */
  right: 16rpx; /* 同时向内移动一些 */
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  line-height: 1;
  z-index: 10;
}

/* ========== 烦恼橡皮擦 ========== */
.worry-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 150;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
  box-sizing: border-box;
}

.worry-modal-content {
  position: relative;
  width: 100%;
  max-width: 600rpx;
  border-radius: 32rpx;
  overflow: hidden;
}

.worry-modal-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.worry-modal-body {
  position: relative;
  z-index: 1;
  padding: 56rpx 44rpx 44rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.worry-modal-title {
  font-size: 36rpx;
  color: #5c4a32;
  letter-spacing: 3rpx;
  margin-bottom: 32rpx;
  font-weight: 500;
}

.worry-input {
  width: 100%;
  min-height: 200rpx;
  padding: 28rpx;
  margin-bottom: 32rpx;
  font-size: 28rpx;
  color: #333;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  box-sizing: border-box;
}

.worry-modal-btn {
  padding: 24rpx 48rpx;
  background: rgba(139, 115, 85, 0.25);
  color: #5c4a32;
  border-radius: 24rpx;
  font-size: 28rpx;
  letter-spacing: 3rpx;
  font-weight: 500;
}

.worry-animation-layer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  z-index: 10000;
  overflow: hidden;
}

.running-sheep-container {
  position: absolute;
  bottom: 10rpx;
  left: -200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: sheepWalkFlow 12s linear forwards;
  z-index: 5;
}

.running-sheep-image {
  width: 520rpx;
  height: 520rpx;
  animation: sheepBob 0.6s ease-in-out infinite alternate;
}

.falling-char {
  position: absolute;
  top: -100rpx;
  color: #87CEEB;
  opacity: 0.8;
  font-family: serif;
  text-shadow: 0 0 10rpx rgba(135, 206, 235, 0.8);
  animation: dropAndBounce ease-in forwards;
}

@keyframes dropAndBounce {
  0% {
    top: -100rpx;
    transform: translateX(0);
  }
  60% {
    top: calc(100vh - 580rpx);
    transform: translateX(0);
    animation-timing-function: ease-out;
  }
  80% {
    top: calc(100vh - 900rpx);
    transform: translateX(calc(250rpx * var(--bounce-dir, 1)));
  }
  100% {
    top: 100vh;
    transform: translateX(calc(350rpx * var(--bounce-dir, 1)));
    opacity: 0;
  }
}

@keyframes sheepWalkFlow {
  0% { left: -550rpx; }
  100% { left: 120%; }
}

@keyframes sheepBob {
  from { transform: translateY(0); }
  to { transform: translateY(-8rpx); }
}

.encouraging-text {
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0);
  font-size: 40rpx;
  color: #fff;
  text-align: center;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.3);
  font-weight: bold;
  opacity: 0;
  white-space: normal;
  word-wrap: break-word;
  width: 80%;
  line-height: 1.4;
  z-index: 10001;
  animation: popInAndOut 6s ease-in-out forwards;
}

@keyframes popInAndOut {
  0% {
    transform: translate(-50%, -50%) scale(0);
    opacity: 0;
  }
  15% {
    transform: translate(-50%, -50%) scale(1.2);
    opacity: 1;
  }
  25% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
  }
  85% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
  }
  100% {
    transform: translate(-50%, -50%) scale(1.5);
    opacity: 0;
  }
}

.close-animation-btn {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 48rpx;
  line-height: 1;
  z-index: 10002;
}
