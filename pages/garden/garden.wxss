/* 动画层 */
.animation-layer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  z-index: 10000;
  overflow: hidden;
}

/* 掉落的文字 */
.falling-char {
  position: absolute;
  top: -100rpx;
  color: #87CEEB;
  opacity: 0.8;
  font-family: serif;
  text-shadow: 0 0 10rpx rgba(135, 206, 235, 0.8);
  /* 使用 dropAndBounce 动画，时长由内联样式控制 */
  animation: dropAndBounce ease-in forwards;
}

@keyframes dropAndBounce {
  0% {
    top: -100rpx;
    transform: translateX(0);
  }
  60% {
    top: calc(100vh - 580rpx); /* 再次调整撞击高度：适配520rpx大羊 */
    transform: translateX(0);
    animation-timing-function: ease-out;
  }
  80% {
    top: calc(100vh - 900rpx); /* 弹起高度大幅增加 */
    /* 根据 --bounce-dir 变量决定弹射方向，力度加大 */
    transform: translateX(calc(250rpx * var(--bounce-dir, 1)));
  }
  100% {
    top: 100vh;
    transform: translateX(calc(350rpx * var(--bounce-dir, 1)));
    opacity: 0;
  }
}

/* 奔跑的小羊 - 图片版 */
.running-sheep-container {
  position: absolute;
  bottom: 10rpx; /* 沉底，走进花丛中 */
  left: -200rpx; /* 初始位置在屏幕左外 */
  display: flex;
  flex-direction: column;
  align-items: center;
  /* 匀速走过 */
  animation: sheepWalkFlow 12s linear forwards;
  z-index: 5; /* 降低层级，放在植物(z-index: 10)后面，实现“在花草中” */
}

.running-sheep-image {
  width: 520rpx; /* 再放大：360 -> 520 */
  height: 520rpx;
  /* 走路时的颠簸感 */
  animation: sheepBob 0.6s ease-in-out infinite alternate;
}

/* 鼓励文字 */
.encouraging-text {
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0);
  font-size: 40rpx;
  color: #fff;
  text-align: center;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.3);
  font-weight: bold;
  opacity: 0;
  white-space: normal; /* 允许换行 */
  word-wrap: break-word; /* 长单词换行 */
  width: 80%;
  line-height: 1.4; /* 增加行高，让多行显示更舒适 */
  z-index: 10001;
  animation: popInAndOut 6s ease-in-out forwards;
}

@keyframes popInAndOut {
  0% {
    transform: translate(-50%, -50%) scale(0);
    opacity: 0;
  }
  15% {
    transform: translate(-50%, -50%) scale(1.2);
    opacity: 1;
  }
  25% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
  }
  85% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
  }
  100% {
    transform: translate(-50%, -50%) scale(1.5);
    opacity: 0;
  }
}

/* 羊的移动流程：走入 -> 走出 */
@keyframes sheepWalkFlow {
  0% {
    left: -550rpx; /* 适配超大羊初始位置 */
  }
  100% {
    left: 120%; /* 走出屏幕 */
  }
}

/* 走路时的颠簸动画 */
@keyframes sheepBob {
  from { transform: translateY(0); }
  to { transform: translateY(-8rpx); }
}

