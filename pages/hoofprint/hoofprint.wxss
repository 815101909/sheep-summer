/* 动画效果 */
.timeline-node {
  animation: slideInUp 0.8s ease-out;
  animation-fill-mode: both;
}

.timeline-node:nth-child(1) {
  animation-delay: 0.1s;
}

.timeline-node:nth-child(2) {
  animation-delay: 0.3s;
}

.timeline-node:nth-child(3) {
  animation-delay: 0.5s;
}

.film-card {
  animation: slideInFilm 0.8s ease-out;
  animation-fill-mode: both;
}

.node-cards .film-card:nth-child(1) {
  animation-delay: 0.8s;
}

.node-cards .film-card:nth-child(2) {
  animation-delay: 1.0s;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInScale {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes slideInFilm {
  from {
    opacity: 0;
    transform: translateX(-30rpx) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateX(0) scale(1);
  }
}

