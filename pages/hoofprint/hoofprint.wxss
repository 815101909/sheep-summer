}

.picker-display:active {
  background: rgba(0, 0, 0, 0.8);
  transform: scale(0.98);
}

.picker-text {
  font-size: 22rpx;
  color: #ffffff;
  font-family: 'Courier New', monospace;
  text-shadow: 1rpx 1rpx 0rpx rgba(0, 0, 0, 0.8);
  letter-spacing: 1rpx;
}

/* 下拉选择器样式 */
.dropdown-container {
  position: relative;
  width: 195rpx; /* 缩短5rpx */
}

.dropdown-trigger {
  background: rgba(0, 0, 0, 0.7);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  min-height: 48rpx;
  cursor: pointer;
  backdrop-filter: blur(10rpx);
}

.dropdown-trigger:active {
  background: rgba(0, 0, 0, 0.8);
  transform: scale(0.98);
}

.dropdown-text {
  font-size: 22rpx;
  color: #ffffff;
  font-family: 'Courier New', monospace;
  text-shadow: 1rpx 1rpx 0rpx rgba(0, 0, 0, 0.8);
  letter-spacing: 1rpx;
}

.dropdown-list {
