/* pages/hoofprint/hoofprint.wxss */

/* CSS变量定义 */
:root {
  --primary-color: #333333;
  --secondary-color: #666666;
  --accent-color: #FF6B6B;
  --film-bg: #1a1a1a;
  --film-border: #333333;
  --timeline-line: #FF6B6B;
  --date-bg: rgba(255, 255, 255, 0.9);
}

/* 背景容器 */
.background-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: -1;
  opacity: 0.3;
}

.background-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 顶部轮播区域 */
.top-carousel {
  position: relative;
  height: 410rpx;
  width: calc(100% - 120rpx);
  margin: 45rpx 60rpx 20rpx 60rpx;
  border-radius: 12rpx;
  z-index: 2;
  overflow: hidden;
}

/* 轮播左上角斜线徽章 */
.carousel-badge {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  padding: 10rpx 18rpx;
  background: rgba(255, 255, 255, 0.85);
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 14rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.12);
  z-index: 3;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: 600;
  color: #333333;
  letter-spacing: 1rpx;
  backdrop-filter: blur(6rpx);
}

/* 移除徽章的边角装饰 */

.carousel-swiper {
  height: 100%;
  width: 100%;
  border-radius: 12rpx;
  overflow: hidden;
}

.carousel-card {
  position: relative;
  height: 100%;
  width: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  margin: 0 20rpx;
}

.card-bg {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.card-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
  padding: 40rpx 30rpx 20rpx;
  color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}


.card-desc {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
  font-family: 'Courier New', monospace;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.5);
}

/* 筛选控件 */
.filter-container {
  background: rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 30rpx 20rpx 30rpx 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  z-index: 2;
  position: relative;
}

.difficulty-container {
  background: rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 10rpx 20rpx 20rpx 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  z-index: 2;
  position: relative;
  width: 100%;
}

/* 筛选项目 */
.filter-item {
  transform: translateX(5rpx);
}

/* 日期控件容器 */
.date-controls {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

/* 全部日期按钮 */
.all-date-btn {
  background: rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 8rpx;
  padding: 8rpx 14rpx;
  min-height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  transform: translateX(-10rpx);
}

.all-date-btn:active {
  background: rgba(0, 0, 0, 0.1);
  transform: scale(0.98);
}

.btn-text {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.5);
  letter-spacing: 0.5rpx;
}


.filter-row {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 60rpx; /* 日期和类型组之间的间距 */
}

.filter-item {
  display: flex;
  align-items: center;
  gap: 12rpx; /* 标签、竖线、选择器之间的间距 */
}

.filter-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  font-family: 'Courier New', monospace;
}

.filter-separator {
  width: 6rpx;
  height: 32rpx;
  background-color: #888888;
  border-radius: 3rpx;
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.filter-options {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
}

.filter-btn {
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  color: var(--primary-color);
  font-family: 'Courier New', monospace;
  transition: all 0.3s ease;
  min-width: 100rpx;
  text-align: center;
}

.filter-btn.active {
  background: var(--accent-color);
  color: white;
  border-color: var(--accent-color);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
  transform: translateY(-1rpx);
}

/* 日期选择器样式 */
.date-picker {
  width: 200rpx;
}

.picker-display {
  background: rgba(0, 0, 0, 0.7);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
