/* 明信片容器 */
.postcards-container {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

/* 明信片项目 */
.postcard-item {
  position: relative;
  width: 100%;
  height: 400rpx;
  perspective: 1200rpx;
  cursor: pointer;
}

.postcard-front,
.postcard-back {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  transition: transform 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

/* 明信片正面（封面） */
.postcard-front {
  background: #fff;
  transform: rotateY(0deg);
}

/* 明信片背面（内容） */
.postcard-back {
  transform: rotateY(180deg);
}

/* 翻转动画 */
.postcard-item.flipped .postcard-front {
  transform: rotateY(-180deg);
}

.postcard-item.flipped .postcard-back {
  transform: rotateY(0deg);
}

/* 封面图片 */
.postcard-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 封面覆盖层 */
.postcard-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 40rpx 30rpx 30rpx;
  color: white;
}

.postcard-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  font-family: 'Courier New', monospace;
  text-shadow: 2rpx 2rpx 0px rgba(0, 0, 0, 0.5);
  margin-bottom: 12rpx;
  line-height: 1.3;
}

.postcard-date {
  display: block;
  font-size: 24rpx;
  font-family: 'Courier New', monospace;
  text-shadow: 1rpx 1rpx 0px rgba(0, 0, 0, 0.5);
  opacity: 0.9;
}

/* 内容文字容器 */
.postcard-content-text {
  width: 100%;
  height: 100%;
  padding: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.content-text {
  font-size: 24rpx;
