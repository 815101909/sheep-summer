/* 会员页面样式 */
.vip-container {
  position: relative;
  min-height: 100vh;
  overflow: hidden;
}

.page-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

/* 内容区域 */
.vip-content {
  position: relative;
  z-index: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

