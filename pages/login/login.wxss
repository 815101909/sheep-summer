/* 登录页面样式 */
.login-container {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

/* 背景容器 */
.bg-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.splash-bg {
  width: 100%;
  height: 100%;
}

/* 登录内容 */
.login-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 10;
  padding: 40rpx;
  box-sizing: border-box;
  gap: 40rpx;
}

/* 登录按钮 */
.login-btn-container {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 100rpx;
}

.login-btn {
  width: 280rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #228B22 0%, #32CD32 100%);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(34, 139, 34, 0.3);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(34, 139, 34, 0.4);
}

/* 协议勾选 */
.agreement-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 130rpx;
  padding: 0 15rpx;
  max-width: 600rpx;
}

.agreement-checkbox {
  margin-right: 10rpx;
  transform: scale(1.2);
  flex-shrink: 0;
}

.agreement-text-wrapper {
  display: flex;
  align-items: center;
  white-space: nowrap;
  flex-shrink: 0;
}

.agreement-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.2;
  white-space: nowrap;
}

.agreement-link {
  font-size: 26rpx;
  color: #667eea;
  text-decoration: underline;
  white-space: nowrap;
  margin: 0 2rpx;
}

/* 底部标语 */
.slogan-container {
  margin-top: 20rpx;
  padding-bottom: 60rpx;
}

.slogan-text {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  font-weight: 500;
  letter-spacing: 1rpx;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .login-content {
    padding: 30rpx;
  }

  .login-btn {
    width: 240rpx;
    height: 70rpx;
    font-size: 28rpx;
  }

  .agreement-container {
    margin-bottom: 110rpx;
    padding: 0 8rpx;
    max-width: 500rpx;
  }

  .agreement-text {
    font-size: 24rpx;
    line-height: 1.2;
  }

  .agreement-link {
    font-size: 24rpx;
    margin: 0 1rpx;
  }

  .slogan-text {
    font-size: 26rpx;
    padding-bottom: 40rpx;
  }
}

.agreement-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.agreement-modal {
  width: 86vw;
  max-width: 680rpx;
  max-height: 80vh;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 12rpx 28rpx rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-sizing: border-box; /* 确保 padding 不会导致溢出 */
}

.agreement-title {
  padding: 24rpx 28rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.agreement-scroll {
  height: 60vh;
  padding: 20rpx 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.agreement-content {
  display: block;
  white-space: pre-wrap;
  font-size: 26rpx;
  line-height: 1.6;
  color: #333;
  width: 100%;
  word-wrap: break-word;
  word-break: break-all;
}

.agreement-actions {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 28rpx 28rpx;
  justify-content: flex-end;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  min-width: 180rpx;
  height: 70rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
}

.agree-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.close-btn {
  background: #f2f2f2;
  color: #333;
}
