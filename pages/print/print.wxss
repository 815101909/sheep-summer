.print-container {
  position: relative;
  min-height: 100vh;
  overflow: hidden;
}

.page-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.print-content {
  position: relative;
  z-index: 1;
  padding: 20rpx;
  display: flex;
  justify-content: center;
}

.a4-paper {
  width: 90vw;
  max-width: 900rpx;
  min-height: 580rpx;
  background: #fff;
  border: 3rpx solid #d4d4d4;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  padding: 20rpx;
  box-sizing: border-box;
  margin: 180rpx auto 40rpx auto;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: column;
}

.print-image {
  width: 100%;
  height: 500rpx;
  display: block;
}

.a4-stack .a4-paper + .a4-paper {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.content-box {
  width: 100%;
  margin-top: 20rpx;
  background: #d8ecd4;
  border: 4rpx dashed #333;
  border-radius: 18rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.08);
}
.content-title {
  font-size: 26rpx;
  color: #0b8f2f;
  font-weight: bold;
  margin-bottom: 12rpx;
  text-align: center;
}
.content-text {
  display: block;
  font-size: 28rpx;
  line-height: 1.7;
  color: #2c3e50;
  text-align: justify;
}
